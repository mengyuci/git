<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="扫描歌曲"
        android:textSize="25sp" />

    <TextView 
        android:id="@+id/find_music_number"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已扫描到0首歌曲"/>
    <TextView 
        android:id="@+id/find_music_filepath_show"
        android:layout_below="@id/find_music_number"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在扫描：/sdcard/"/>
    <Button 
        android:id="@+id/find_music_complete"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/find_music_filepath_show"
        android:text="取消扫描"/>
</RelativeLayout>
