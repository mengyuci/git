<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
   
    <ImageButton 
        android:id="@+id/fanhui"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#FFFFFFFF"
        android:src="@drawable/fanhui"
        />
    <ImageButton 
	    android:id="@+id/more"
	    android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/more"
        android:layout_alignParentRight="true"
        android:background="#FFFFFFFF"
        android:layout_alignTop="@id/fanhui"
	    />
    <TextView 
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/fanhui"
        android:layout_toLeftOf="@id/more"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#FFFFFFFF"
        android:text="  提示信息"/>
    <ListView
        android:id="@+id/listView_song_name"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true" >
    </ListView>
	<SeekBar 
	    android:id="@+id/songs_process_list"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"/>
	
	<ImageView 
	    android:id="@+id/singerphoto_list"
	    android:layout_height="60dp"
	    android:layout_width="60dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/listView_song_name"
	    android:layout_above="@id/songs_process_list"
	    android:background="#000000" 
	    />
	<TextView 
	    android:id="@+id/song_name_list"
	    android:layout_height="wrap_content"
	    android:layout_width="70dp"
		android:layout_alignTop="@id/singerphoto_list"
		android:layout_toRightOf="@id/singerphoto_list"
		android:text="歌曲名"/>
	<TextView
	    android:id="@+id/singer_name_list"
	    android:layout_height="wrap_content"
	    android:layout_width="70dp"
	    android:layout_toRightOf="@id/singerphoto_list"
	    android:layout_below="@id/song_name_list"
	    android:text="歌手名字"/>
	<ImageButton 
	    android:id="@+id/pre_song_list"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@id/singer_name_list"
	    android:layout_alignTop="@id/song_name_list"
	    android:background="#FFFFFFFF" 
	    android:src="@drawable/pre_song"
	    />
	<ImageButton 
	    android:id="@+id/play_list"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@id/pre_song_list"
	    android:layout_alignTop="@id/pre_song_list"
	    android:layout_marginLeft="2dp"
	    android:background="#FFFFFFFF"
	    android:src="@drawable/play"/>
	<ImageButton 
	    android:id="@+id/next_song_list"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@id/play_list"
	    android:layout_alignTop="@id/play_list"
	    android:layout_marginLeft="2dp"
	    android:background="#FFFFFFFF"
	    android:src="@drawable/next_song"/>
</RelativeLayout>
